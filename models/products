<?php

//definizione della classe prodotti
class Products {
    protected string $name;
    protected string $price;
    protected string $description;
    protected string $type;
    protected string $image;

    //definizione del construct padre
    public function __construct(string $name, string $price, string $type, string $image){
        $this->name     = $name;
        $this->price    = $price;
        $this->type     = $type;
        $this->image    = $image;
        
    }

    // inserimento della descriione del prodotto
    public function setDescription($description){
        $this->description = $description;
    }


    // richiamo degli attributi e assegnazione degli attributi alle rispettive funzioni
    public function getName(){
        return $this->name;
    }

    public function getPrice(){
        return $this->price;
    }

    public function getDescription(){
        return $this->description;
    }

    public function getImage(){
        return $this->image;
    }

    public function getType(){
        return $this->type;
    }

}

?>